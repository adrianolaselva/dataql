#!/bin/bash
#
# DataQL Pre-commit Hook
# Runs gofmt and golangci-lint before allowing commits
#
# Install with: make hooks
# Remove with: make hooks-remove
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "Running pre-commit checks..."
echo ""

# Get the root of the git repository
ROOT=$(git rev-parse --show-toplevel)
cd "$ROOT"

# Check for gofmt issues on staged Go files only
echo "Checking code formatting with gofmt..."
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -n "$STAGED_GO_FILES" ]; then
    GOFMT_OUTPUT=""
    for file in $STAGED_GO_FILES; do
        if [ -f "$file" ]; then
            OUTPUT=$(gofmt -l "$file" 2>&1 || true)
            if [ -n "$OUTPUT" ]; then
                GOFMT_OUTPUT="$GOFMT_OUTPUT$OUTPUT\n"
            fi
        fi
    done

    if [ -n "$GOFMT_OUTPUT" ]; then
        echo -e "${RED}❌ gofmt found issues in the following files:${NC}"
        echo -e "$GOFMT_OUTPUT"
        echo ""
        echo "Run 'make fmt' to fix formatting issues, then stage the changes."
        exit 1
    fi
fi
echo -e "${GREEN}✓${NC} Code formatting OK"

# Run golangci-lint on staged files (if available)
if command -v golangci-lint &> /dev/null; then
    echo "Running golangci-lint..."

    if [ -n "$STAGED_GO_FILES" ]; then
        # Run lint only on staged files for faster checks
        if ! golangci-lint run --new-from-rev=HEAD~1 --timeout 5m 2>/dev/null; then
            # Fallback to full lint if new-from-rev fails
            if ! golangci-lint run ./... --timeout 5m; then
                echo -e "${RED}❌ Linter found issues. Fix them before committing.${NC}"
                exit 1
            fi
        fi
    fi
    echo -e "${GREEN}✓${NC} Linter checks passed"
else
    echo -e "${YELLOW}⚠${NC} golangci-lint not installed, skipping lint check"
    echo "  Install with: go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"
fi

echo ""
echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"
